                        android:layout_weight="1"
                        android:padding="10dp"
                        android:paddingStart="25dp"
                        android:text="Address:"
                        android:textColor="@color/Primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv3"
